<%= form_with model: Tweet.new, url: tweets_path, local: true, class:'w-100', data: { controller: 'tweet_form' } do |f| %>
  <%= f.text_area :body, placeholder:"What's happening?", class: 'form-control tweet-input w-100' %>
  <div class="d-flex justify-content-end">
    <%= f.submit "Tweet", class: 'btn btn-twitter rounded-pill' %>
  </div>
<% end %>