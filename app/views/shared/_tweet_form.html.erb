<div class="tweet hover d-flex py-3 px-3" >
  <div class="flex-shrink-0">
    <% if current_user.avatar.present? %>
      <%= image_tag current_user.avatar, size: '48x48', class: 'rounded-circle' %>
    <% else %>
      <%= image_tag asset_path('person-64.png'), size: '48x48', class: 'rounded-circle' %>
    <% end %>
  </div>

  <div class="flex-grow-1 ms-0">
    <%= form_with model: Tweet.new, url: form_submit_path, local: true, class:'w-100', data: { controller: 'tweet-form' } do |f| %>
      <%= f.text_area :body, placeholder:"What's happening?", class: 'form-control tweet-input w-100' %>
      <div class="d-flex justify-content-end">
        <%= f.submit button_label, class: 'btn btn-twitter rounded-pill' %>
      </div>
    <% end %>
  </div>
</div>
