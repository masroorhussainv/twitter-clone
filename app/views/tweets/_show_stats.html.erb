<%= turbo_frame_tag dom_id(tweet_presenter.tweet) do %>
  <div class="stats d-flex justify-content-start mb-4">
    <div class="me-4"><%= tweet_presenter.views_count %><span class="fw-bolder"> Views</span></div>
    <div class="me-4"><%= tweet_presenter.reply_tweets_count %> <span class="fw-bolder"> Replies</span></div>
    <div class="me-4"><%= tweet_presenter.retweets_count %> <span class="fw-bolder"> Retweets</span></div>
    <div class="me-4"><%= tweet_presenter.likes_count %> <span class="fw-bolder"> Likes</span></div>
  </div>
  <div class="d-flex justify-content-evenly">
    <%= link_to "#",  class: 'text-decoration-none text-black action-link views' do %>
      <i class="bi bi-bar-chart-fill me-1"></i>
    <% end %>
    <%= link_to '#', class: 'text-decoration-none text-black action-link replies' do %>
      <i class="bi bi-chat me-1"></i>
    <% end %>
    <%= link_to tweet_presenter.retweet_url(source: 'tweet_show'), data: { 'turbo-method': tweet_presenter.retweet_turbo_method,  }, class: 'text-decoration-none text-black action-link retweet' do %>
      <i class="<%= tweet_presenter.retweet_image %> me-1"></i>
    <% end %>
    <%= link_to tweet_presenter.tweet_like_url(source: 'tweet_show'), data: { 'turbo-method': tweet_presenter.turbo_data_method,  }, class: 'text-decoration-none text-black action-link likes', remote: true do %>
      <i class="<%= tweet_presenter.like_heart_image %> me-1"></i>
    <% end %>
    <%= link_to tweet_presenter.tweet_bookmark_url(source: 'tweet_show'), data: { 'turbo-method': tweet_presenter.bookmark_turbo_method,  },  class: 'text-decoration-none text-black action-link likes' do %>
      <i class="<%= tweet_presenter.bookmark_image %> me-1"></i>
    <% end %>
  </div>
<% end %>