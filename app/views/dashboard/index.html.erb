<% if user_signed_in? %>
	<h1>You're Logged in</h1>
  <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-primary' %>

  <%= form_with model: Tweet.new, url: tweets_path, local: true do |f| %>
    <%= f.text_field :body %>
    <%= f.submit "Create Tweet", class: 'btn btn-primary' %>
  <% end %>

  <ul>
    <% Tweet.find_each do |tweet| %>
      <li><%= tweet.body %></li>
    <% end %>
  </ul>
<%end%> 